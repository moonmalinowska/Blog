{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
    {% form_theme form 'form/field.html.twig' %}
    <h2>Edytuj tag</h2>
    {#<div>{{ form_errors(form) }}</div>
    {{ form(form, {'method': 'POST'}) }}

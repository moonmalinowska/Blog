{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
    <h2>Usunąć tag <span class="label label-default ">{{ tag.name }}</span>?</h2>

    <form class="form-horizontal" method="post" {{ form_enctype(form) }}>
        <fieldset>
            {{ form_start(form) }}
            {{ form_errors(form) }}


            <div class="form-group">
                <label for="approved" class="col-lg-12 control-label"></label>

                <div class="col-lg-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success', 'type': 'radio'}}) }}
                    <a class="btn btn-info" role="button" href="{{ url('tags') }}" title="">
                        Wróc
                    </a>
                </div>
            </div>

            </div>
            {{ form_end(form) }}
        </fieldset>
    </form>
{% endblock %}


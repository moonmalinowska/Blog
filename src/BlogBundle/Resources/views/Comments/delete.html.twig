{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
    <h2>Usunąć komentarz?</h2>
    <div class="well well-sm">
        <span><span class="text-primary">Autor: </span>{{ comment.author }}</span><br>
        <span class="text-primary"> Komentarz: </span>{{ comment.content }}
    </div>
    <form class="form-horizontal" method="post" {{ form_enctype(form) }}>
        <fieldset>
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-1">
<span>
        <a class="btn btn-info" role="button" href="{{ url('comments-list') }}" title="">
            Wróc
        </a>
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary', 'type': 'submit'}}) }}

</span>
                </div>
            </div>
            {{ form_end(form) }}
        </fieldset>
    </form>

{% endblock %}


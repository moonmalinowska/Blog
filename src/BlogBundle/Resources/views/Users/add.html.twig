{% extends 'BlogBundle::layout.html.twig' %}
{% block title %}Dodaj u≈ºytkownika{% endblock %}
{% block body %}
    <h2>Dodaj uzytkownika</h2>
    {#<div>{{ form_errors(form) }}</div>
    {{ form(form, {'method': 'POST'}) }}#}


    <form class="form-horizontal" method="post" >
        <fieldset>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    {{ form_label(form.username) }}
                </label>
                <div class="col-lg-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" >
                    {{ form_label(form.plainPassword) }}
                </label>
                <div class="col-lg-10">
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">
                    {{ form_label(form.email) }}
                </label>
                <div class="col-lg-10">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">
                    {{ form_label(form.enabled) }}
                </label>
                <div class="checkbox">
                    <label>
                        {{ form_widget(form.enabled, {'attr': {'type': 'checkbox'}}) }}
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">

                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary', 'type': 'submit'}}) }}

                </div>
            </div>
            {{ form_end(form) }}
        </fieldset>


    </form>

{% endblock %}

